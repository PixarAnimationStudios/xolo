# frozen_string_literal: true

require 'xolo'

# The App
#####################
class XoloAdmin

  def initialize
    Xolo::Admin.executable = __FILE__
    Xolo::Admin::CommandLine.parse_cli
  end

  def run
    puts
    puts 'GLOBAL OPTS'
    puts Xolo::Admin::Options.global_opts

    puts
    puts 'COMMAND OPTS'
    puts Xolo::Admin::Options.cmd_opts

    puts
    puts :title_id
    puts Xolo::Admin::Options.cmd_opts.title_id

    puts
    puts :version
    puts Xolo::Admin::Options.cmd_opts.version
  end # run

end # class XoloAdmin

# MAIN
#####################
begin
  debug = ARGV.include? '--debug'
  app = XoloAdmin.new
  app.run
rescue => e
  warn "ERROR: #{e}"
  e.backtrace.each { |l| warn "..#{l}" } if debug
end
